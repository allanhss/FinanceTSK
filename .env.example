# Configurações do FinanceTSK

# Caminho para a pasta sincronizada (OneDrive/Google Drive)
# Windows exemplo: C:/Users/SeuNome/OneDrive/FinanceTSK
# Linux exemplo: /home/seunome/OneDrive/FinanceTSK
DATA_PATH=

# Porta do servidor local
PORT=8050

# Modo debug (True para desenvolvimento, False para produção)
DEBUG=False

# Configurações de backup
AUTO_BACKUP=True
BACKUP_FREQUENCY=7  # dias